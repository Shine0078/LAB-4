extends ../index
block content
    .container.pt-5
        .row.justify-content-md-center
            .col-lg-8

                // Edit Animal Details Form
                form(action="/update-animal-details", method="post", class="mb-4")
                    input(type="hidden", name="animalId", value=animal._id)

                    .form-group
                        label(for="zooLocation") Zoo Location
                        input(type="text", class="form-control", id="zooLocation", name="zoo", value=animal.zoo)

                    .form-group
                        label(for="scientificLabel") Biological Name
                        input(type="text", class="form-control", id="scientificLabel", name="scientificName", value=animal.scientificName)

                    .form-group
                        label(for="nickname") Nickname
                        input(type="text", class="form-control", id="nickname", name="givenName", value=animal.givenName)

                    .form-group
                        label(for="animalCommonName") Common Name
                        input(type="text", class="form-control", id="animalCommonName", name="commonName", value=animal.commonName)

                    .form-group
                        label Gender
                        .d-flex.align-items-center
                            .form-check.mx-2
                                input(type="radio", class="form-check-input", id="genderMale", name="gender", value="Male", checked=animal.gender === 'Male')
                                label(for="genderMale", class="form-check-label") Male

                            .form-check.mx-2
                                input(type="radio", class="form-check-input", id="genderFemale", name="gender", value="Female", checked=animal.gender === 'Female')
                                label(for="genderFemale", class="form-check-label") Female

                    .form-group
                        label(for="birthdate") Birth Date
                        input(type="date", class="form-control", id="birthdate", name="dateOfBirth", value=new Date(animal.dateOfBirth).toISOString().slice(0, 10))

                    .form-group
                        label(for="animalAge") Age
                        input(type="number", class="form-control", id="animalAge", name="age", value=animal.age)

                    .form-group
                        label Transportability
                        .d-flex.align-items-center
                            .form-check.mx-2
                                input(type="radio", class="form-check-input", id="transportYes", name="isTransportable", value="true", checked=animal.isTransportable)
                                label(for="transportYes", class="form-check-label") Yes

                            .form-check.mx-2
                                input(type="radio", class="form-check-input", id="transportNo", name="isTransportable", value="false", checked=!animal.isTransportable)
                                label(for="transportNo", class="form-check-label") No

                    button(type="submit", class="btn btn-success w-100 mt-3") Update Animal Details

                // Delete Animal Form
                form(action="/remove-animal", method="post", class="mt-3")
                    input(type="hidden", name="animalId", value=animal._id)
                    button(type="submit", class="btn btn-warning w-100") Remove Animal
